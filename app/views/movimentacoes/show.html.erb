<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <h1 class="mb-4 text-center">Detalhes da Movimentação</h1>

  <%= render @movimentacao %>

  <div class="mt-4 d-flex">
    <%= link_to "Editar Movimentação", edit_movimentacao_path(@movimentacao), class: "btn btn-primary btn-sm me-2" %>
    <%= button_to "Excluir", @movimentacao, method: :delete, data: { confirm: "Tem certeza que deseja excluir esta movimentação?" }, class: "btn btn-danger btn-sm me-2" %>
    <%= link_to "Voltar", movimentacoes_path, class: "btn btn-secondary btn-sm" %>
  </div>
</div>