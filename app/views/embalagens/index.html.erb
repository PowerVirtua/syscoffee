<div class="container mt-5">
  <% content_for :title, "Embalagens" %>
  <h1 class="mb-4">Lista de Embalagens</h1>

  <!-- Exibir mensagem de sucesso -->
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <!-- Tabela de Embalagens -->
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>Nome</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @embalagens.each do |embalagem| %>
        <tr>
          <td><%= embalagem.nome %></td>
          <td>
            <%= link_to 'Visualizar', embalagem, class: "btn btn-info btn-sm" %>
            <%= link_to 'Editar', edit_embalagem_path(embalagem), class: "btn btn-warning btn-sm" %>
            <%= link_to 'Excluir', embalagem, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Botão para Nova Embalagem -->
  <%= link_to 'Nova Embalagem', new_embalagem_path, class: "btn btn-primary mt-3" %>
</div>