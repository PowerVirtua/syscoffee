<div class="container mt-5">
  <% content_for :title, "Movimentações" %>

  <h1 class="mb-4 text-center">Movimentações</h1>

  <!-- Mensagem de Notificação -->
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <!-- Campo de Busca -->
  <form action="<%= movimentacoes_path %>" method="get" class="mb-3 d-flex">
    <input type="text" name="q" value="<%= params[:q] %>" class="form-control me-2" placeholder="Buscar movimentação" />
    <button type="submit" class="btn btn-primary">Buscar</button>
  </form>

  <!-- Botão para Nova Movimentação -->
  <div class="mb-4">
    <%= link_to "Nova Movimentação", new_movimentacao_path, class: "btn btn-success btn-sm" %>
  </div>

  <!-- Listagem de Movimentações -->
  <div id="movimentacoes">
    <% @movimentacoes.each do |movimentacao| %>
      <div class="card mb-3">
        <div class="card-body">
          <%= render movimentacao %>
          <div class="mt-3">
            <%= link_to "Visualizar", movimentacao, class: "btn btn-info btn-sm me-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>