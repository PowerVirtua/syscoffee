<div class="container mt-5">
  <!-- Mensagem de sucesso -->
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <!-- Detalhes da Embalagem -->
  <div class="card mb-3">
    <div class="card-body">
      <%= render @embalagem %>
    </div>
  </div>

  <!-- Botões de Ação -->
  <div class="mt-3">
    <%= link_to "Editar", edit_embalagem_path(@embalagem), class: "btn btn-warning" %>
    <%= link_to "Voltar", embalagens_path, class: "btn btn-secondary" %>
    <%= button_to "Excluir", @embalagem, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger" %>
  </div>
</div>